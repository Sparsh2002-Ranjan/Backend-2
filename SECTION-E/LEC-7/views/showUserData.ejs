<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Details</title>
    <link rel="stylesheet" href="/style.css">  <!-- Correct path to the CSS -->
</head>
<body>
    <!-- Navbar -->
    <nav>
        <ul>
            <li><a href="/u1/user/all">All Users</a></li>
            <li><a href="/u1/user/new">Add New User</a></li>
        </ul>
    </nav>

    <h1>User Details</h1>

    <% if (Users.length === 0) { %>
        <p>No users available.</p>
    <% } else { %>
        <div class="user-cards">
            <% for (let user of Users) { %>
                <div class="user-card">
                    <h2><%= user.email %></h2>
                    <p><strong>Password:</strong> <%= user.password %></p>
                    <p><strong>Contact:</strong> <%= user.contact %></p>
                    <a href="/u1/user/update/<%= user.id %>">Edit</a>
                    <form action="/u1/user/delete/<%= user.id %>?_method=DELETE" method="POST">
                        <button type="submit">Delete</button>
                    </form>
                </div>
            <% } %>
        </div>
    <% } %>
</body>
</html>
